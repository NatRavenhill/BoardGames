@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/index.css" type="text/css" />
<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    @{
        if (Model.MostPopularGames.Any())
        {
            <h2> Popular Games</h2>
            <p> Here are the most popular games:</p>

            <div id="gamesCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#gamesCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#gamesCarousel" data-slide-to="1"></li>
                    <li data-target="#gamesCarousel" data-slide-to="2"></li>
                </ol>

                @if (Model.MostPopularGames.Any()) {
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="@Model.MostPopularGames[0].ImageLink" class="d-block" alt="...">
                            <h3>
                                <a asp-controller="GameDetail" asp-action="GameDetail"
                                   asp-route-id="@Model.MostPopularGames[0].BBGId">@Model.MostPopularGames[0].Name</a>
                            </h3>
                        </div>

                        @for (int i = 1; i < Model.MostPopularGames.Count; i++) {
                            <div class="carousel-item">
                                <img src="@Model.MostPopularGames[i].ImageLink" class="d-block" alt="...">
                                <h3>
                                    <a asp-controller="GameDetail" asp-action="GameDetail"
                                       asp-route-id="@Model.MostPopularGames[i].BBGId">@Model.MostPopularGames[i].Name</a>
                                </h3>
                            </div>
                        }
                    </div>
                }
                
                <a class="carousel-control-prev" href="#gamesCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#gamesCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        }
        else
        {
            <p>There are no games! Go to Add Games to add some.</p>
        }
    }




</div>
